package sctrcd.payments.rules

import com.sctrcd.payments.facts.*
import com.sctrcd.payments.validation.Mod97Check

global java.util.List countryList;

rule "Trigger IBAN validation."
    no-loop
when
    $req: PaymentValidationRequest($payment:payment)
    not IbanValidationRequest()
then
   insert( new IbanValidationRequest($payment.getIban()) );
end
